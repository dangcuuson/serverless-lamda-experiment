{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es6",
        "esnext.asynciterable",
        "dom"
      ],
      "module": "commonjs",
      "outDir": "./build",
      "allowJs": true,
      "strict": true,
      "noImplicitAny": false,
      "diagnostics": false,
      "noEmit": false,
      "pretty": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/__mocks__/*"
    ]
  }